<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Setting | @ViewBag.Title</title>

    @Styles.Render("~/Content/imported")
    @Styles.Render("~/Content/bootstrapCDN")
    @Styles.Render("~/Content/font-awesomeCDN")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="setting container-fluid">
        <div class="row">
            <div class="setting__navigation col-lg-3 col-md-5 col-sm-12">
                <div class="setting__icon d-flex align-items-center">
                    <i class="setting__icon--setting icon-basic-gear icon-size--big"></i>
                    <span class="setting__icon--text">Basic Set-Up</span>
                </div>
                <div class="setting__navigation">
                    <div class="setting__navigation--accordion" id="navAccordion">
                        <div class="card">
                            <div class="card-header" id="headingOne">
                                <h6 class="mb-0">
                                    <input type="checkbox"
                                           id="accordion1"
                                           class="btn btn-link"
                                           data-toggle="collapse"
                                           data-target="#collapseOne"
                                           aria-expanded="true"
                                           aria-controls="collapseOne"
                                           hidden>
                                    <label for="accordion1" class="btn btn-link">
                                        File Extensions
                                    </label>
                                    <!-- <div class="setting__navigation--icon">
                                    </div> -->
                                </h6>
                            </div>

                            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#navAccordion">
                                <div class="card-body">
                                    <ul class="setting__navigation--list">
                                        <li class="setting__navigation--item">
                                            <a href="/Administrator/Setting/view_extension" class="setting__navigation--link">
                                                View
                                            </a>
                                        </li>
                                        <li class="setting__navigation--item">
                                            <a href="/Administrator/Setting/add" class="setting__navigation--link">
                                                Add
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div> <!-- /#navAccordion -->
                </div>
            </div>
            <div class="setting__content col-lg-9 col-md-7 col-sm-12">
                <div class="container">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - DDT KONSTRACT, INC.</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @* Bootstrap Script from CDN *@
    @Scripts.Render("~/bundles/jquery331CDN")
    @Scripts.Render("~/bundles/popperCDN")
    @Scripts.Render("~/bundles/bootstrapCDN")

    @* Import Fine Uploader Script *@
    @Scripts.Render("~/bundles/fineUploader")

    @* Import Custom Script *@
    @Scripts.Render("~/bundles/custom")

    @RenderSection("scripts", required: false)
</body>
</html>
