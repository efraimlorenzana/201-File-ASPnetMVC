@model hr_201_file.Models.Employee

@{
    ViewBag.Title = "Profile";
}

@section scripts {
    <script type="text/javascript">
        employeeNavLink();
        modify_DOM_on_page_load();
    </script>
}

<div class="profile">
    <h6 class="profile__empno">@Model.EmpNo</h6>
    <h6 class="profile__name">
        @Model.FullName
    </h6>
    <span class="profile__details">
        Joined:
        <span class="profile__details--doj">@Model.JoiningDate</span>
    </span>
    <div class="profile__position">@Model.JobPosition.Description</div>
    <div class="profile__jobcategory">
        @ViewBag.jobCategory
    </div>
    <!-- <div class="profile__empno-sm">
        <div class="profile__empno-sm--label">EMPNO</div>
        <div>
            <span class="profile__empno-sm--value">@Model.EmpNo</span>
        </div>
    </div> -->
    <div class="profile__picture">
        <img class="profile__picture-data" src="@ViewBag.Picture" alt="User Picture">
    </div>
</div>

<div class="sub__nav">
    <ul class="nav nav-pills employee-nav">
        @foreach (var folder in ViewBag.fileCategory)
        {
            <li class="nav-item">
                <a class="nav-link sub-nav-link" onclick="subNav(event, @folder.id, @Model.EmpNo)" href="#">
                    @folder.category_name
                </a>
            </li>
        }
    </ul>
</div>

<div class="profile__content"></div>
