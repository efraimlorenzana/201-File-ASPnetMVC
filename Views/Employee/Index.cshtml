@model hr_201_file.Models.Employee

@{
    ViewBag.Title = "Profile";
}

<div class="profile">
    <span class="profile__name">
        @Model.FullName
    </span>
    <span class="profile_details">
        Joined:
        <span class="profile__details--doj">@Model.JoiningDate</span>
    </span>
    <div class="profile__position">@Model.JobPosition.Description</div>
    <div class="profile__jobcategory">@ViewBag.jobCategory</div>
    <div class="profile__picture">
        <img class="profile__picture-data" src="~/Images/male.png" alt="Femail">
    </div>
</div>

<div class="sub__nav">
    <ul class="nav nav-tabs employee-nav">
        <li class="nav-item">
            <a class="nav-link active sub-nav-link" onclick="subNav(event)" href="#">
                Employee Info
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link sub-nav-link" onclick="subNav(event)"  href="#">
                Employment Records
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link sub-nav-link" onclick="subNav(event)" href="#">
                Medical Records
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link sub-nav-link" onclick="subNav(event)" href="#">
                Memo / Notices
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link sub-nav-link" onclick="subNav(event)" href="#">
                Training History
            </a>
        </li>
        
        <li class="nav-item">
            <a class="nav-link sub-nav-link" onclick="subNav(event)" href="#">
                Others
            </a>
        </li>
    </ul>
</div>

<div class="profile__content"></div>