@model IEnumerable<hr_201_file.Models.Folder>
    
    @{
        ViewBag.Title = "File Manager | DDTKI";
        <!-- Layout = "~/Views/Shared/_Setting.cshtml"; -->
    }
    
    <section class="section__file">
        <div class="u-mb-medium d-flex align-items-center d-inline-block">
            <i class="d-inline-block icon-basic-archive-full icon-size--big icon-color--green mr-3"></i>
            <span class="header-text d-inline-block text--green text--medium">File Manager</span>
        </div>
        
        <table class="table table-hover">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="ls-1 d-flex align-items-center">
                        <!-- <i class="fas fa-folder text-success fa-2x"></i> -->
                        <i class="icon icon-basic-folder icon-size--medium mr-2"></i>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a name="btn_link" href="/File/New_Record?folder_id=@(item.Code)" class="mr-4">
                            Insert
                        </a>
                        <a name="btn_link" href="#">
                            <i class="fas fa-sign-in-alt fa-2x text-warning"></i>
                        </a>
                    </td>
                </tr>
            }
            
        </table>
    </section>
    
    